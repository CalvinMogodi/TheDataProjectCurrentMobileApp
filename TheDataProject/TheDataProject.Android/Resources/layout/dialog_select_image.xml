<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thisColor"
    android:gravity="center_vertical">
  <LinearLayout
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <Button
      android:backgroundTint="@color/primary"
      android:paddingLeft="20dp"
      android:theme="@style/button_primary"
       android:gravity="center"
      android:id="@+id/img_takeaphoto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableLeft="@android:drawable/ic_menu_camera"
      android:text="@string/camera" />
    <Button
      android:backgroundTint="@color/primary"
      android:theme="@style/button_primary"
       android:gravity="center"
       android:paddingRight="20dp"
      android:id="@+id/img_selectpicture"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableLeft="@android:drawable/ic_menu_gallery"
      android:text="@string/selectPicture" />
  </LinearLayout>
  <ImageView
      android:src="@android:drawable/ic_menu_gallery"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#FFFFFF"
      android:padding="3dp"
      android:layout_gravity="center_horizontal"
      android:id="@+id/imgsi_facilityphoto" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">
    <Button
        android:text="@string/cancel"
        android:backgroundTint="@color/darkgray"
        android:theme="@style/button_cancel"
        android:id="@+id/sicancel_button"
        android:layout_width="140dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content" />
    <Button
        android:text="@string/done"
        android:backgroundTint="@color/primary"
        android:theme="@style/button_primary"
        android:id="@+id/sidone_button"
        android:layout_width="140dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>