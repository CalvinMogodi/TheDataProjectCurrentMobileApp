<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center_vertical">

  <Button
        android:backgroundTint="@color/primary"
        android:theme="@style/button_primary"
        android:id="@+id/img_takeaphoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera" />
  <Button
    android:backgroundTint="@color/primary"
    android:theme="@style/button_primary"
    android:id="@+id/img_selectpicture"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/selectPicture"/>
  <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1" />
  <ImageView
      android:src="@drawable/noimage_placeholder"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:layout_gravity="center_horizontal"
      android:id="@+id/imgsi_facilityphoto" />
  <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">
    <Button
        android:text="@string/cancel"
        android:backgroundTint="@color/darkgray"
        android:theme="@style/button_cancel"
        android:id="@+id/sicancel_button"
        android:layout_width="140dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content" />
    <Button
        android:text="@string/done"
        android:backgroundTint="@color/primary"
        android:theme="@style/button_primary"
        android:id="@+id/sidone_button"
        android:layout_width="140dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>